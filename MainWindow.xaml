<Window x:Class="Lab1Malynovskyi.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        
        Title="LaBirth" Height="240" Width="320" Background="Azure">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            
        </Grid.ColumnDefinitions>

        <Viewbox Grid.Row="0" Grid.Column="1">
            <DatePicker HorizontalAlignment="Center" VerticalAlignment="Center" SelectedDate="{Binding DateBirth, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            </Viewbox>
        <TextBlock Grid.Row="0" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Top" TextAlignment="Center"  Text="Pick your birthday" FontSize="20" FontStyle="Oblique"/>
        
        </Grid>
</Window>
